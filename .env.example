# -- Server Configuration --
HTTP_PORT=8000
MCP_PORT=8001
LOG_LEVEL=INFO

# -- Search Configuration --
# SearxNG instances to use. Provide a comma-separated list.
SEARXNG_INSTANCES=https://searx.be,https://searx.tiekoetter.com,https://searx.work
# Default timeout in seconds for search requests
DEFAULT_TIMEOUT=10

# -- AI Models Configuration --
# Embedding model from HuggingFace or local path
EMBEDDING_MODEL=nomic-ai/stella_en_1.5B_v5
# Embedding dimensions for the chosen model
EMBEDDING_DIMENSIONS=4096
# Reranker model from HuggingFace or local path
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
# Enable or disable the reranking stage
RERANKING_ENABLED=true
# Max input length for the reranker model
RERANKER_MAX_LENGTH=512

# -- Ollama Integration (Optional) --
# URL for Ollama API if you want to use it for embeddings
OLLAMA_URL=http://localhost:11434

# -- Content Extraction --
# Mode for content extraction: 'readability', 'manual', 'structured'
EXTRACTION_MODE=readability
# Generate LLM-optimized markdown from extracted content
LLM_OPTIMIZED_MARKDOWN=true
# Timeout for fetching content for extraction
EXTRACTION_TIMEOUT=15
# Enable or disable JavaScript rendering for content extraction
ENABLE_JS_RENDERING=true

# -- Caching --
# Enable or disable caching for search results
CACHE_ENABLED=true
# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600
# Maximum size of the cache in MB
CACHE_MAX_SIZE_MB=50
# Path for the cache database
CACHE_PATH=./cache/search_cache.db
